<!DOCTYPE ModuleProperties PUBLIC "=//iPlanet//Authentication Module Properties XML Interface 1.0 DTD//EN"
	"jar://com/sun/identity/authentication/Auth_Module_Properties.dtd">

<ModuleProperties moduleName="Unix" version="1.0" >    
    <Callbacks length="2" order="1" timeout="60" header="Este servidor utiliza la autenticación de Unix." >
        <NameCallback>            
            <Prompt> Nombre de usuario: </Prompt>            
        </NameCallback>
        <PasswordCallback echoPassword="false" >
            <Prompt> Contraseña: </Prompt>            
        </PasswordCallback>           
    </Callbacks>
    <Callbacks length="0" order="2" timeout="120" header=" La contraseña ha caducado. Póngase en contacto con el servicio de atención al cliente para restablecer su contraseña." error="true"  />
</ModuleProperties>
