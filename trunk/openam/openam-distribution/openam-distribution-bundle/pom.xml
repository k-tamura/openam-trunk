    <!-- Parent Project -->
    <parent>
        <groupId>org.forgerock.openam</groupId>
        <artifactId>openam-distribution</artifactId>
        <version>10.1.0-SNAPSHOT</version>
    </parent>

    <!-- Component Definition -->
    <name>OpenAM OSGi Bundle</name>
    <description>OpenAM OSGi Bundle.
    </description>
    <artifactId>openam-distribution-bundle</artifactId>
    <version>10.1.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <organization>
        <name>ForgeRock</name>
        <url>http://www.forgerock.com</url>
    </organization>

    <!-- Build -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <supportedProjectTypes>
                        <supportedProjectType>bundle</supportedProjectType>
                        <supportedProjectType>jar</supportedProjectType>
                        <supportedProjectType>war</supportedProjectType>
                        <supportedProjectType>zip</supportedProjectType>
                    </supportedProjectTypes>
                    <manifestLocation>META-INF</manifestLocation>
                    <instructions>
                        <Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${pom.artifactId}</Bundle-Name>
                        <!--
                          assume public classes are in the top package, and private classes are under ".internal"
                        -->
                        <Export-Package>!org.forgerock.internal.*,!*.fedlet.*,
                                        org.forgerock.*,
                                        com.sun.*,com.iplanet.*;
                                        version="${pom.version}"</Export-Package>
                        <Private-Package>org.forgerock.internal.*</Private-Package>
                        <Bundle-Activator>org.forgerock.openam.osgi.BundleActivator</Bundle-Activator>
                        <!--
                          embed compile/runtime dependencies using path that matches the copied dependency folder
                        -->
                        <Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
                        <Embed-Directory>target/dependency</Embed-Directory>
                        <Embed-StripGroup>false</Embed-StripGroup>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>

    </build>
    
    <dependencies>

        <!-- This Project's Final Artifact use. -->
    	<dependency>
	   		<groupId>org.forgerock.openam</groupId>
        	<artifactId>openam-server</artifactId>
            <version>10.1.0-SNAPSHOT</version>
            <type>war</type>
		</dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
    </dependencies>
    
</project>

