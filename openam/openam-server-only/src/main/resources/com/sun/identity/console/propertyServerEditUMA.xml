<!DOCTYPE propertysheet SYSTEM "propertysheet.dtd">

<propertysheet>
    <section name="common-section" defaultValue="amconfig.org.forgerock.services.resourcesets.store.common.section">
        <property required="true">
            <cc name="cscorg-forgerock-services-resourcesets-store-location" tagclass="com.sun.web.ui.taglib.html.CCRadioButtonTag">
                <option label="amconfig.org.forgerock.services.resourcesets.store.location.default" value="default" />
                <option label="amconfig.org.forgerock.services.resourcesets.store.location.external" value="external" />
                <attribute name="onChange" value="toggleExternalConfig(this);" />
            </cc>
        </property>
        <property required="true">
            <label name="rootSuffixLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.root.suffix" labelFor="cscorg-forgerock-services-resourcesets-store-root-suffix" />
            <cc name="cscorg-forgerock-services-resourcesets-store-root-suffix" tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag"></cc>
        </property>
    </section>
    <section name="external-section" defaultValue="amconfig.org.forgerock.services.resourcesets.store.external.section">
        <property required="true">
            <label name="sslLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.ssl.enabled" labelFor="cscorg-forgerock-services-resourcesets-store-ssl-enabled" />
            <cc name="cscorg-forgerock-services-resourcesets-store-ssl-enabled" tagclass="com.sun.web.ui.taglib.html.CCCheckBoxTag"></cc>
        </property>
        <property required="true">
            <label name="directoryNameLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.directory.name" labelFor="cscorg-forgerock-services-resourcesets-store-directory-name" />
            <cc name="cscorg-forgerock-services-resourcesets-store-directory-name" tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag"></cc>
            <fieldhelp name="helpcscorg-forgerock-services-resourcesets-store-directory-name" defaultValue="amconfig.help.org.forgerock.services.resourcesets.store.directory.name" />
        </property>
        <property required="true">
            <label name="loginIdLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.loginid" labelFor="cscorg-forgerock-services-resourcesets-store-loginid" />
            <cc name="cscorg-forgerock-services-resourcesets-store-loginid" tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag"></cc>
        </property>
        <property required="true">
            <label name="passwordLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.password" labelFor="cscorg-forgerock-services-resourcesets-store-password" />
            <cc name="cscorg-forgerock-services-resourcesets-store-password" tagclass="com.sun.web.ui.taglib.html.CCPasswordTag"></cc>
        </property>
        <property required="true">
            <label name="maxConnectionsLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.max.connections" labelFor="cscorg-forgerock-services-resourcesets-store-max-connections" />
            <cc name="cscorg-forgerock-services-resourcesets-store-max-connections" tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag"></cc>
        </property>
        <property required="true">
            <label name="heartbeatLabel" defaultValue="amconfig.org.forgerock.services.resourcesets.store.heartbeat" labelFor="cscorg-forgerock-services-resourcesets-store-heartbeat" />
            <cc name="cscorg-forgerock-services-resourcesets-store-heartbeat" tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag"></cc>
        </property>
    </section>
</propertysheet>