<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>openam-ssoAdminTools</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- Library Dependency -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.forgerock.openam:openam-shared</include>
                <include>org.forgerock.openam:openam-core</include>
                <include>org.forgerock.openam:openam-cli-definitions</include>
                <include>org.forgerock.openam:openam-cli-impl</include>
                <include>org.forgerock.openam:openam-entitlements</include>
                <include>org.forgerock.openam:openam-federation-library</include>
                <include>org.forgerock.openam:OpenFM</include>
                <include>org.forgerock.openam:openam-dtd-schema</include>
                <include>org.forgerock.openam:openam-jaxrpc-schema</include>
                <include>org.forgerock.openam:openam-idsvcs-schema</include>
                <include>org.forgerock.openam:openam-liberty-schema</include>
                <include>org.forgerock.openam:openam-saml2-schema</include>
                <include>org.forgerock.openam:openam-wsfederation-schema</include>
                <include>org.forgerock.openam:openam-distribution-amadmsetup</include>
                <include>external:OpenDJ</include>
                <include>javax.xml:jaxrpc-api</include>
                <include>external:jaxrpc-impl</include>
                <include>com.sun.xml.rpc:jaxrpc-spi</include>
                <include>org.json:json</include>
                <include>external:jsr173_api</include>
                <include>javax.mail:mail</include>
                <include>relaxngDatatype:relaxngDatatype</include>
                <include>external:webservices-api</include>
                <include>external:webservices-rt</include>
                <include>com.sun.tools.ws:webservices-tools</include>
                <include>xalan:xalan</include>
                <include>xerces-J:xml-serializer</include><!-- for metadata export -->
                <include>xerces-J:xercesImpl</include>
                <include>net.java.dev.msv.datatype.xsd:xsdlib</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>provided</scope>
            <includes>
                <include>javax.servlet:servlet-api</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <!-- File Groupings -->
    <fileSets>

        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>${project.basedir}/../../license</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>${project.basedir}/../src/main/amserver/scripts/tools</directory>
            <includes>
                <include>README.setup</include>
                <include>setup</include>
                <include>setup.bat</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>classes</outputDirectory>
            <directory>${project.basedir}/../../openam-server-only/src/main/webapp/WEB-INF/template/ldif/odsee</directory>
            <includes>
                <include>odsee_config_index.ldif</include>
                <include>odsee_config_schema.ldif</include>
            </includes>
        </fileSet>

        <!-- First, Pick up Files from our AntRun -->
        <fileSet>
            <outputDirectory>resources</outputDirectory>
            <directory>${project.build.directory}/resources</directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>

        <fileSet>
            <outputDirectory>resources</outputDirectory>
            <directory>${project.basedir}/../../openam-server-only/src/main/webapp/WEB-INF</directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>resources</outputDirectory>
            <directory>${project.basedir}/../../openam-server-only/src/main/webapp/WEB-INF/classes</directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>

        <fileSet>
            <outputDirectory>resources</outputDirectory>
            <directory>${project.basedir}/../../openam-server-only/src/main/resources/config</directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>resources</outputDirectory>
            <directory>${project.basedir}/../../openam-server-only/src/main/resources/console</directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>resources</outputDirectory>
            <directory>${project.basedir}/../../openam-server-only/src/main/resources/tools</directory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>

        <fileSet>
            <outputDirectory>template/unix/bin</outputDirectory>
            <includes>
                <include></include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/template/windows/bin</outputDirectory>
            <includes>
                <include></include>
            </includes>
        </fileSet>
    </fileSets>

    <!-- Single Files -->
    <files>
        <file>
            <source>${project.basedir}/../../openam-federation/OpenFM/src/main/scripts/bin/ssoadm</source>
            <outputDirectory>template/unix/bin</outputDirectory>
            <destName>ssoadm.template</destName>
        </file>
        <file>
            <source>${project.basedir}/../../openam-federation/OpenFM/src/main/scripts/bin/ssoadm.bat</source>
            <outputDirectory>template/windows/bin</outputDirectory>
            <destName>ssoadm.bat.template</destName>
        </file>

        <file>
            <source>${project.basedir}/../src/main/amserver/scripts/bin/ampassword</source>
            <outputDirectory>template/unix/bin</outputDirectory>
            <destName>ampassword.template</destName>
        </file>
        <file>
            <source>${project.basedir}/../src/main/amserver/scripts/bin/ampassword.bat</source>
            <outputDirectory>template/windows/bin</outputDirectory>
            <destName>ampassword.bat.template</destName>
        </file>

        <file>
            <source>${project.basedir}/../src/main/amserver/scripts/log/amverifyarchive</source>
            <outputDirectory>template/unix/bin</outputDirectory>
            <destName>amverifyarchive.template</destName>
        </file>
        <file>
            <source>${project.basedir}/../src/main/amserver/scripts/log/amverifyarchive.bat</source>
            <outputDirectory>template/windows/bin</outputDirectory>
            <destName>amverifyarchive.bat.template</destName>
        </file>

    </files>

</assembly>

