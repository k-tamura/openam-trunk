<project name="open-source-web-agents-install-iis7" default="build">
                
    <description>Open Web Single Sign-On IIS7 agent install</description>
    <!-- enforce invocation via top level build only -->
    <fail message="*** IIS7 Agent may be built from top level only ***">
        <condition>
            <or>
                <not><isset property="containername"/></not>
            </or>
        </condition>
    </fail>

    <property name="webagents.install.iis7.dir" 
        location="${webagents.install.dir}/${containername}"/>
    <property name="webagents.install.iis7.scripts.dir" 
        location="${webagents.install.iis7.dir}/scripts"/>
    <property name="webagents.install.iis7.resource.dir" 
        location="${webagents.install.iis7.dir}/resources"/>

    <target name="build">

        <!-- Copy version file -->
        <copy todir="${webagents.container.classes.dir}">
            <fileset dir="${webagents.install.dir}/${containername}">
                <include name=".version"/>
            </fileset>
        </copy>
        <concat destfile="${webagents.container.classes.dir}/.version" append="true">
             <filelist dir="${webagents.base.dir}" files=".version"/>
        </concat>

        <copy todir="${container.web_agent.bin.dir}">
            <fileset dir="${webagents.install.iis7.scripts.dir}">
                    <include name="IIS7Admin.vbs"/>
            </fileset>
        </copy>
        <copy todir="${container.web_agent.bin.dir}">
            <fileset dir="${webagents.install.iis7.scripts.dir}">
                    <include name="IIS7CreateConfig.vbs"/>
            </fileset>
        </copy>
        <copy todir="${container.web_agent.bin.dir}">
            <fileset dir="${webagents.install.iis7.resource.dir}">
                    <include name="IIS7Resource.en"/>
            </fileset>
        </copy>

        <copy todir="${container.web_agent.bin.dir}">
            <fileset dir="${webagents.iis7.src.dir}">
                    <include name="amiis7module.dll"/>
                    <include name="amiis7module.pdb"/>
            </fileset>
        </copy>

        <copy todir="${container.web_agent.bin.dir}">
            <fileset dir="${container.web_agent.lib.dir}">
                    <include name="**"/>
            </fileset>
        </copy>

        <!-- delete unncessary files/directories, since these are not used -->
        <delete dir="${container.web_agent.lib.dir}"/>
        <delete dir="${container.web_agent.locale.dir}"/>
        <delete dir="${container.web_agent.jce.dir}"/>
        <delete dir="${container.web_agent.jsse.dir}"/>
        <delete dir="${container.web_agent.etc.dir}"/>
        <delete dir="${container.web_agent.data.dir}"/>
        <delete dir="${container.web_agent.logs.dir}"/>
        <delete file="${container.web_agent.config.dir}/OpenSSOInstallerConfig.properties"/>
        <delete file="${container.web_agent.bin.dir}/agentadmin.bat"/>

        <!-- Generate IIS7 agent install archive -->
        <zip destfile="${webagents.dist.dir}/iis_v7_${build.os}${winnt.ext}_agent_${agentversion}.zip"
             basedir="${webagents.container.scratch.dir}"
        /> 
        <checksum file="${webagents.dist.dir}/iis_v7_${build.os}${winnt.ext}_agent_${agentversion}.zip"
            algorithm="SHA" fileext=".sha" />

    </target>

    <target name="copy-WINNT-library">
        <copy todir="${container.web_agent.lib.dir}">
            <fileset dir="${webagents.iis7.src.dir}">
                    <include name="amiis7module.dll"/>
            </fileset>
        </copy>

    </target>

</project>
