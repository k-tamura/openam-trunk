<project name="open-source-j2ee-agents-jboss" default="build">
    <description>OpenSSO Policy Agent for JBoss Application Server</description>

    <fail message="*** jdk target is not set ***">
        <condition>
            <not><isset property="target.jdk.set"/></not>
        </condition>
    </fail>

    <!-- enforce invocation via top level build only -->
    <fail message="*** J2EE Agent may be built from top level only ***">
        <condition>
            <or>
                <not><isset property="containername"/></not>
                <not><isset property="containerversion"/></not>
            </or>
        </condition>
    </fail>
    <property name="j2eeagents.jboss.common.src.dir" location="${j2eeagents.basedir}/jboss/common/source"/>

    <target name="compile_common">
        <javac destdir="${j2eeagents.container.classes.dir}"
            source="${target.jdk.set}" target="${target.jdk.set}"
            debug="${build.debug}" debuglevel="${build.debuglevel}">
            <src path="${j2eeagents.jboss.common.src.dir}"/>
            <classpath refid="build.class.path"/>
        </javac>
    </target>
        
    <target name="build" depends="compile_common">
        <echo message="***********Now calling JBoss v42 build ********"/>
        <ant antfile="${j2eeagents.basedir}/${containername}/${containerversion}/build.xml" inheritRefs="true"/>
    </target>

</project>
